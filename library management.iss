Source: "AppFolder\license.txt"; DestDir: "{app}"
Source: "AppFolder\img3.bmp"; DestDir: "{app}"; Flags: dontcopy


[Icons]
Name: "{group}\Library Management"; Filename: "{app}\Library Management.exe"
Name: "{group}\Uninstall Library Management"; Filename: "{uninstallexe}"

[Run]
