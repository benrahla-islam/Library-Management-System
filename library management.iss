procedure InitializeWizard();
var
  BitmapImage: TBitmapImage;
begin
  // Create a TBitmapImage control on the wizard's welcome page (wpWelcome)
  BitmapImage := TBitmapImage.Create(WizardForm.WelcomePage);
  BitmapImage.Parent := WizardForm.WelcomePage;

  // Load the bitmap from the temporary directory
  BitmapImage.Bitmap.LoadFromFile(ExpandConstant('AppFolder\img3.bmp'));

  // Adjust the position and size of the image (example values)
  BitmapImage.Left := 10;
  BitmapImage.Top := 10;
  BitmapImage.Width := BitmapImage.Bitmap.Width; // Or set a specific width
  BitmapImage.Height := BitmapImage.Bitmap.Height; // Or set a specific height

  // Optional: Stretch the image to fit a specific area
