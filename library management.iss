[Setup]
AppName=Library Management
AppVersion=1.0.0
DefaultDirName={pf}\Library Management 
DefaultGroupName=Islam Test App 
OutputDir=Output
OutputBaseFilename=Library Management Setup
SetupIconFile=AppFolder\appicon.ico
Compression=lzma
SolidCompression=yes
LicenseFile=Appfolder\license.txt

[Files]
